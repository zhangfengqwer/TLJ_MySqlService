<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="NhInterMySQL"
                   namespace="NhInterMySQL.Model">

  <class name="Task" table="task">
    <id name="task_id" column="task_id" type="Int32">
      <generator class="native"></generator>
    </id>
    <property name="target" column="target" type="Int32"></property>
    <property name="exp" column="exp" type="Int32"></property>
    <property name="title" column="title" type="String"></property>
    <property name="content" column="content" type="String"></property>
    <property name="reward" column="reward" type="String"></property>
  </class>
</hibernate-mapping>