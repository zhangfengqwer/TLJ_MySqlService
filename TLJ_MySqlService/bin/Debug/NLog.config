<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>

    <!--文件格式 -->
    <target xsi:type="File" name="info" 
            fileName="e:\\log\\TLJ_MySqlServiceLog\\${shortdate}-Info-MySqlService.log"
            layout="${longdate} ${uppercase:${level}} [${threadid}] (${callsite}:${callsite-linenumber}) --- ${message}" />
    
    <target xsi:type="File" name="warn" 
            fileName="e:\\log\\TLJ_MySqlServiceLog\\${shortdate}-Warn-MySqlService.log"
            layout="${longdate} ${uppercase:${level}} [${threadid}] (${callsite}:${callsite-linenumber}) --- ${message}" />
    
  </targets>
  
  <rules>
    <logger name="*" minlevel="Debug" maxlevel="Info" writeTo="info" />
    <logger name="*" minlevel="Warn"  writeTo="warn" />
  </rules>
</nlog>
